<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.hx.bokumsatzkontroller"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" 
        >
        <activity
            android:name="MainActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.hx.bokumsatzkontroller.fleischActivity.FleischActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" >
        </activity>
        <activity
            android:name="de.hx.bokumsatzkontroller.fleischActivity.FleischBestellungenActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="de.hx.bokumsatzkontroller.fleischActivity.FleischBestellungNachschauActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="de.hx.bokumsatzkontroller.fleischActivity.FleischZwischenBerichtActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="de.hx.bokumsatzkontroller.fleischActivity.FleischEinkaufBerichtActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="de.hx.bokumsatzkontroller.getraenkeActivity.GetraenkeActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" >
        </activity>
        <activity
            android:name="de.hx.bokumsatzkontroller.getraenkeActivity.GetraenkeBestellungenActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="de.hx.bokumsatzkontroller.getraenkeActivity.GetraenkeBestellungNachschauActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="de.hx.bokumsatzkontroller.getraenkeActivity.GetraenkeZwischenBerichtActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="de.hx.bokumsatzkontroller.getraenkeActivity.GetraenkeEinkaufBerichtActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="GesamtZwischenBericht"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="de.hx.bokumsatzkontroller.fleischActivity.FleischDiagrammActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="de.hx.bokumsatzkontroller.getraenkeActivity.GetraenkeDiagrammActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="GesamtDiagrammActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="BestellungsvorschlageActivity"
            android:screenOrientation="portrait" 
            android:windowSoftInputMode="adjustResize">
        </activity>
    </application>

</manifest>